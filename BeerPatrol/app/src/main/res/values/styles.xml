<resources>

    <!-- Base application theme. -->
    <style name="BeerPatrolTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="colorError">@color/colorError</item>
    </style>

    <style name="BeerPatrolTheme.Launcher">
        <item name="android:windowBackground">@drawable/app_logo</item>
        <item name="colorPrimaryDark">#C63C22</item>
    </style>

    <!--Input Text Layout Style -->
    <style name="Widget.BeerPatrol.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintTextAppearance">@style/TextAppearance.BeerPatrol.TextInputLayout.HintText</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="hintTextColor">@color/colorText</item>
    </style>

    <!--Card style -->
    <style name="Widget.BeerPatrol.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorSurface</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">10dp</item>
    </style>

    <!--Heading-->
    <style name="TextAppearance.BeerPatrol.Heading" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/body_big_font_size</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!--Description text -->
    <style name="TextAppearance.BeerPatrol.Description" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/body_font_size</item>
    </style>

    <!--Bold Info text -->
    <style name="TextAppearance.BeerPatrol.BoldInfoText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/body_font_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Card text type1 -->
    <style name="TextAppearance.BeerPatrol.CardTextType1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/body_font_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Card text type2 -->
    <style name="TextAppearance.BeerPatrol.CardTextType2" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/body_font_size</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!--Card text type3 -->
    <style name="TextAppearance.BeerPatrol.CardTextType3" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/body_big_font_size</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!--Hint Text for TextInputLayout -->
    <style name="TextAppearance.BeerPatrol.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">@dimen/subtitle_font_size</item>
    </style>

    <!--Error Text Style -->
    <style name="TextAppearance.BeerPatrol.ErrorText" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/colorError</item>
        <item name="android:textSize">@dimen/error_font_size</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
