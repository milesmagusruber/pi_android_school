<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.milesmagusruber.secretserviceflickrsearch">
    <!-- Permissions to work with Flickr via Internet -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" /> <!-- Permission to use geolocation services -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" /> <!-- Permissions to work with photos and save them on the device -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.GalleryViewItemActivity"></activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.milesmagusruber.secretserviceflickrsearch.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity
            android:name="com.yalantis.ucrop.UCropActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".activities.GalleryActivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".activities.GoogleMapsSearchActivity" />
        <activity
            android:name=".activities.LoginActivity"
            android:theme="@style/AppTheme.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.LastSearchRequestsActivity" />
        <activity android:name=".activities.FavoritesActivity" />
        <activity
            android:name=".activities.FlickrViewItemActivity"
            android:label="@string/title_activity_flickr_view_item"
            android:parentActivityName=".activities.FlickrSearchActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.milesmagusruber.secretserviceflickrsearch.activities.FlickrSearchActivity" />
        </activity>
        <activity
            android:name=".activities.FlickrSearchActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>