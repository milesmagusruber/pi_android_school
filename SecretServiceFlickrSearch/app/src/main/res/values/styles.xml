<resources>

    <!-- Base application theme. -->
    <style name="Theme.SSFS" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.SSFS.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SSFS.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>

    <style name="Theme.SSFS.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light"/>

    <style name="Theme.SSFS.Launcher">
        <item name="android:windowBackground">@drawable/logo</item>
        <item name="colorPrimaryDark">@android:color/black</item>
    </style>

    <!--Input Text Layout Style-->
    <style name="Widget.SSFS.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">

    </style>

    <!--Button Style-->
    <style name="Widget.SSFS.Button" parent="Widget.MaterialComponents.Button">

    </style>

    <!--Icon Button Style-->
    <style name="Widget.SSFS.IconButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">

    </style>

    <!--Card style-->
    <style name="Widget.SSFS.CardView" parent="Widget.MaterialComponents.CardView">

    </style>

    <!--Headline of Activity Text-->
    <style name="TextAppearance.SSFS.Heading" parent="TextAppearance.MaterialComponents.Headline1">

    </style>

    <!--Card caption text-->
    <style name="TextAppearance.SSFS.CardCaption" parent="TextAppearance.MaterialComponents.Headline2">

    </style>

    <!--Card text type1-->
    <style name="TextAppearance.SSFS.CardTextType1" parent="TextAppearance.MaterialComponents.Body1">

    </style>

    <!--Card text type2-->
    <style name="TextAppearance.SSFS.CardTextType2" parent="TextAppearance.MaterialComponents.Body1">

    </style>

    <!--Hint Text for TextInputLayout-->
    <style name="TextAppearance.SSFS.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle1">

    </style>


</resources>
